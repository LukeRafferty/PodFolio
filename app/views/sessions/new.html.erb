<div class="container">
  <div>
    <h1>Login</h1>
  </div>

  <%= form_tag '/login' do %>
    <div>
      Username: <%= text_field_tag :username %>
    </div>
    <div>
      Password: <%= password_field_tag :password %>
    </div>
    <button class="btn waves-effect waves-light yellow darken-2" type="submit" name="action">Sign In
    </button>

  <% end %>
</div>
