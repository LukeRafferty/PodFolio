<div class="container">
  <div class="center-align">
    <h2 class="noto"> <%= @user.username %>'s PodFolio </h2>
  </div>

  <% @selected_podcasts.each do |selected_podcast| %>
    <% podcast = selected_podcast.podcast %>
    <div class="hoverable card-panel grey lighten-2">
      <div class="center-align noto" id="podcast-title">
        <h4><%= link_to "#{podcast.name}", podcast_path(podcast.id), {:style=>'color:black;'} %></h4>
      </div>

      <div class="row">
        <div class="col s8">
          <p class="in-tile-text"><%= (podcast.description) %></p>
        </div>
        <div class="col s4" >
          <img width="250" src="<%= podcast.img_url %>">
        </div>
      </div>

      <% if @user.id == session[:user_id] %>
        <div class="right-align btn">
            <div id="trash-button">
              <%= link_to image_tag("trashcan.png"), selected_podcast_path(selected_podcast), method: :delete, data: { confirm: "You sure?" } %>
            </div>
        <% end %>
      </div>
    </div>
  <% end %>
  <div class="btn center-align">
    <%= link_to "Add a podcast to your collection", podcasts_path, {:style=>'color:#FFFFFF;'} %>
  </div>

  
</div>
